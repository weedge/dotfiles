[user]
	name = Zach Whaley
	email = zachbwhaley@gmail.com
[color]
	ui = auto
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[difftool]
	prompt = false
[push]
	default = simple
[core]
	editor = nvim
	excludesfile = /home/zwhaley/.gitignore
[alias]
	co = checkout
	br = branch
	st = status
	ci = commit
	cp = cherry-pick
	sh = show
	di = diff
	ds = diff --staged
	lg = log --oneline --graph --format='format:%C(auto)%h %s%C(dim white) Â· %an%C(auto)%d%C(reset)'
	unstage = reset HEAD
	last = log -1 HEAD
	dif = diff
	sync = !git fetch upstream && git merge upstream/master
	apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
[rebase]
	autosquash = true
[pull]
	rebase = true
