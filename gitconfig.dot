[user]
	name = Zachary Whaley
	email = zwhaley@cisco.com
[color]
	ui = auto
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = simple
[core]
	editor = vim
[alias]
	co = checkout
	br = branch
	st = status
	ci = commit
	cp = cherry-pick
	sh = show
	di = diff
	sd = diff --staged
	lg = log --oneline --graph --decorate
	unstage = reset HEAD
	last = log -1 HEAD
	sync = !git fetch upstream && git merge upstream/master
	apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
[rebase]
	autosquash = true
[pull]
	rebase = true
